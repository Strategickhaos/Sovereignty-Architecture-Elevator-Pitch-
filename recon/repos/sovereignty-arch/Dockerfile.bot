FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci --only=production

# Copy source code
COPY src/ ./src/
COPY discovery.yml ./

# Create non-root user
RUN addgroup -g 1001 -S nodejs && adduser -S botuser -u 1001 -G nodejs
USER botuser

EXPOSE 3000

CMD ["node", "src/bot.js"]